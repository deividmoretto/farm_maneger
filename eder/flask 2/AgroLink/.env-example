# Configurações do Banco de Dados
# Substitua os valores entre <> pelos valores reais
DATABASE_URL=postgresql://<usuario>:<senha>@<host>:<porta>/<nome_do_banco>

# Chaves de Segurança (gere chaves fortes e únicas)
SECRET_KEY=<chave_secreta_muito_segura_para_producao>
JWT_SECRET_KEY=<chave_jwt_secreta_muito_segura_para_producao>

# Configurações JWT
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 horas em segundos

# Configurações de Email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=<seu_email@gmail.com>
MAIL_PASSWORD=<sua_senha_de_app>
MAIL_DEFAULT_SENDER=<seu_email@gmail.com>

# Configurações de Ambiente
FLASK_ENV=development  # Mude para 'production' em ambiente de produção
FLASK_DEBUG=1  # Mude para 0 em ambiente de produção
FLASK_APP=main.py

# Configurações de Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL 